<UserControl x:Class="AppDownloader.Controls.AppsList"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <UserControl.Resources>
        <Style x:Key="AppNameStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Margin" Value="0,10"/>
        </Style>

        <Style x:Key="StatusTextStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Margin" Value="0,10"/>
            <Setter Property="Text" Value="Unknown"/>
        </Style>

        <Style x:Key="InstallCheckBoxStyle" TargetType="CheckBox">
            <Setter Property="Margin" Value="0,10"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
        </Style>
    </UserControl.Resources>
    
    <StackPanel>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <TextBlock Text="Chrome" Style="{StaticResource AppNameStyle}"/>
            <TextBlock x:Name="ChromeStatus" Grid.Column="1" Style="{StaticResource StatusTextStyle}"/>
            <CheckBox x:Name="ChromeCheckBox" Grid.Column="2" Style="{StaticResource InstallCheckBoxStyle}"/>
        </Grid>

        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <TextBlock Text="Discord" Style="{StaticResource AppNameStyle}"/>
            <TextBlock x:Name="DiscordStatus" Grid.Column="1" Style="{StaticResource StatusTextStyle}"/>
            <CheckBox x:Name="DiscordCheckBox" Grid.Column="2" Style="{StaticResource InstallCheckBoxStyle}"/>
        </Grid>

        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <TextBlock Text="Telegram" Style="{StaticResource AppNameStyle}"/>
            <TextBlock x:Name="TelegramStatus" Grid.Column="1" Style="{StaticResource StatusTextStyle}"/>
            <CheckBox x:Name="TelegramCheckBox" Grid.Column="2" Style="{StaticResource InstallCheckBoxStyle}"/>
        </Grid>

        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <TextBlock Text="Steam" Style="{StaticResource AppNameStyle}"/>
            <TextBlock x:Name="SteamStatus" Grid.Column="1" Style="{StaticResource StatusTextStyle}"/>
            <CheckBox x:Name="SteamCheckBox" Grid.Column="2" Style="{StaticResource InstallCheckBoxStyle}"/>
        </Grid>

        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <TextBlock Text="Epic Games" Style="{StaticResource AppNameStyle}"/>
            <TextBlock x:Name="EpicStatus" Grid.Column="1" Style="{StaticResource StatusTextStyle}"/>
            <CheckBox x:Name="EpicCheckBox" Grid.Column="2" Style="{StaticResource InstallCheckBoxStyle}"/>
        </Grid>

        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <TextBlock Text="DeepL" Style="{StaticResource AppNameStyle}"/>
            <TextBlock x:Name="DeepLStatus" Grid.Column="1" Style="{StaticResource StatusTextStyle}"/>
            <CheckBox x:Name="DeepLCheckBox" Grid.Column="2" Style="{StaticResource InstallCheckBoxStyle}"/>
        </Grid>

        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <TextBlock Text="NekoBox" Style="{StaticResource AppNameStyle}"/>
            <TextBlock x:Name="NekoBoxStatus" Grid.Column="1" Style="{StaticResource StatusTextStyle}"/>
            <CheckBox x:Name="NekoBoxCheckBox" Grid.Column="2" Style="{StaticResource InstallCheckBoxStyle}"/>
        </Grid>

        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <TextBlock Text="PowerToys" Style="{StaticResource AppNameStyle}"/>
            <TextBlock x:Name="PowerToysStatus" Grid.Column="1" Style="{StaticResource StatusTextStyle}"/>
            <CheckBox x:Name="PowerToysCheckBox" Grid.Column="2" Style="{StaticResource InstallCheckBoxStyle}"/>
        </Grid>

        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <TextBlock Text="JetBrains Toolbox" Style="{StaticResource AppNameStyle}"/>
            <TextBlock x:Name="JetBrainsToolboxStatus" Grid.Column="1" Style="{StaticResource StatusTextStyle}"/>
            <CheckBox x:Name="JetBrainsToolboxCheckBox" Grid.Column="2" Style="{StaticResource InstallCheckBoxStyle}"/>
        </Grid>

        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <TextBlock Text="SteelSeries GG" Style="{StaticResource AppNameStyle}"/>
            <TextBlock x:Name="SteelSeriesGgStatus" Grid.Column="1" Style="{StaticResource StatusTextStyle}"/>
            <CheckBox x:Name="SteelSeriesGgCheckBox" Grid.Column="2" Style="{StaticResource InstallCheckBoxStyle}"/>
        </Grid>

        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <TextBlock Text="Materialgram" Style="{StaticResource AppNameStyle}"/>
            <TextBlock x:Name="MaterialgramStatus" Grid.Column="1" Style="{StaticResource StatusTextStyle}"/>
            <CheckBox x:Name="MaterialgramCheckBox" Grid.Column="2" Style="{StaticResource InstallCheckBoxStyle}"/>
        </Grid>
    </StackPanel>
</UserControl>
